@model IEnumerable<ClassLibrary.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Notifications</h1>
            <div class="flex space-x-2">
                <form asp-action="MarkAllAsRead" method="post">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm">
                        Mark All as Read
                    </button>
                </form>
                <form asp-action="DeleteAll" method="post" onsubmit="return confirm('Are you sure you want to delete all notifications?');">
                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm">
                        Delete All
                    </button>
                </form>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-8">
                <div class="text-gray-400 text-6xl mb-4">
                    <i class="fas fa-bell-slash"></i>
                </div>
                <p class="text-gray-500 text-lg">You don't have any notifications yet.</p>
            </div>
        }
        else
        {
            <div class="space-y-4">
                @foreach (var notification in Model)
                {
                    <div class="border rounded-lg p-4 @(notification.Status == 0 ? "bg-blue-50 border-blue-200" : "bg-white border-gray-200")">
                        <div class="flex justify-between">
                            <div class="flex items-start space-x-3">
                                <div class="@(notification.Status == 0 ? "text-blue-500" : "text-gray-400") text-xl">
                                    @if (notification.NotificationTypeId == 1)
                                    {
                                        <i class="fas fa-info-circle"></i>
                                    }
                                    else if (notification.NotificationTypeId == 2)
                                    {
                                        <i class="fas fa-check-circle"></i>
                                    }
                                    else if (notification.NotificationTypeId == 3)
                                    {
                                        <i class="fas fa-exclamation-circle"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-bell"></i>
                                    }
                                </div>
                                <div>
                                    <p class="text-gray-800 font-medium">@notification.Message</p>
                                    <p class="text-gray-500 text-sm">@notification.DateTime.ToString("MMM dd, yyyy h:mm tt")</p>
                                </div>
                            </div>
                            <div class="flex space-x-2">
                                @if (notification.Status == 0)
                                {
                                    <form asp-action="MarkAsRead" asp-route-id="@notification.Id" method="post">
                                        <button type="submit" class="text-blue-500 hover:text-blue-700">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                }
                                <form asp-action="Delete" asp-route-id="@notification.Id" method="post" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="text-red-500 hover:text-red-700">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
